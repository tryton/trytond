<?xml version="1.0"?>
<terp>
    <data>
        <record model="ir.ui.view" id="rule_group_view_form">
            <field name="model">ir.rule.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Record rules">
                    <field name="model_id"/>
                    <field name="global"/>
                    <field name="name" colspan="4"/>
                    <group colspan="4" col="6" expand="1">
                        <field name="rules" nolabel="1" colspan="6"/>
                        <label string="The rule is satisfied if at least one test is True"
                            colspan="6" align="0.0"/>
                        <label string="If there is no test defined, the rule is always satified if not global"
                            colspan="6" align="0.0"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="rule_group_view_tree">
            <field name="model">ir.rule.group</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Record rules">
                    <field name="model_id"/>
                    <field name="name"/>
                    <field name="global"/>
                </tree>
              ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_rule_group_form">
            <field name="name">Record Rules</field>
            <field name="res_model">ir.rule.group</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_rule_group_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="rule_group_view_tree"/>
            <field name="act_window_id" ref="act_rule_group_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_rule_group_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rule_group_view_form"/>
            <field name="act_window_id" ref="act_rule_group_form"/>
        </record>
        <menuitem parent_id="ir.menu_ir"
            action="act_rule_group_form" id="menu_rule_group_form"/>
        <record model="ir.ui.view" id="rule_view_form">
            <field name="model">ir.rule</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Test">
                    <group colspan="4" col="6">
                        <field name="field_id"/>
                        <field name="operator"/>
                        <field name="operand"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="rule_view_tree">
            <field name="model">ir.rule</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Test">
                    <field name="field_id"/>
                    <field name="operator"/>
                    <field name="operand"/>
                </tree>
                ]]>
            </field>
        </record>
    </data>
</terp>
