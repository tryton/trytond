<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.lang" id="lang_en">
            <field name="code">en_US</field>
            <field name="name">English</field>
        </record>
        <record model="ir.lang" id="lang_fr">
            <field name="code">fr_FR</field>
            <field name="name">Fran√ßais</field>
        </record>
        <record model="ir.ui.view" id="lang_view_tree">
            <field name="model">ir.lang</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Languages" editable="bottom">
                    <field name="name" select="1"/>
                    <field name="code" select="1"/>
                    <field name="direction"/>
                    <field name="translatable" select="1"/>
                    <field name="active" select="2"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_lang_form">
            <field name="name">Languages</field>
            <field name="res_model">ir.lang</field>
            <field name="view_type">form</field>
            <field name="context">{'active_test': False}</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_lang_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_id" ref="lang_view_tree"/>
            <field name="act_window_id" ref="act_lang_form"/>
        </record>
        <menuitem name="Languages" parent_id="ir.menu_ir"
            action="act_lang_form" id="menu_lang_form"/>
    </data>
</tryton>
