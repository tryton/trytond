<?xml version="1.0"?>
<tryton>
    <data>
        <menuitem name="Modules" parent="menu_ir" id="menu_modules"/>
        <record model="ir.ui.view" id="module_view_form">
            <field name="model">ir.module.module</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Module">
                    <notebook>
                        <page string="Module">
                            <label name="name"/>
                            <field name="name"/>
                            <label name="shortdesc"/>
                            <field name="shortdesc"/>
                            <separator name="description" colspan="4"/>
                            <field name="description" colspan="4"/>
                            <label name="version"/>
                            <field name="version"/>
                            <label name="license"/>
                            <field name="license"/>
                            <label name="author"/>
                            <field name="author"/>
                            <label name="website"/>
                            <field name="website" widget="url"/>
                            <label name="url"/>
                            <field name="url" widget="url"/>
                            <newline/>
                            <label name="state"/>
                            <field name="state" readonly="1"/>
                            <group col="6" colspan="2">
                                <button string="Install" name="button_install"
                                    type="object" states="{'invisible': '''state != 'uninstalled' '''}"/>
                                <button string="Cancel Install" name="button_install_cancel"
                                    type="object" states="{'invisible': '''state != 'to install' '''}"/>
                                <button string="Uninstall (beta)" name="button_uninstall"
                                    type="object" states="{'invisible': '''state != 'installed' '''}"/>
                                <button string="Cancel Uninstall" name="button_uninstall_cancel"
                                    type="object" states="{'invisible': '''state != 'to remove' '''}"/>
                                <button string="Upgrade" name="button_upgrade"
                                    type="object" states="{'invisible': '''state != 'installed' '''}"/>
                                <button string="Cancel Upgrade" name="button_upgrade_cancel"
                                    type="object" states="{'invisible': '''state != 'to upgrade' '''}"/>
                                <!--
                                <button string="Update translations" name="button_update_translations"
                                    type="object" states="{'invisible': '''state != 'installed' '''}"/>
                                -->
                            </group>
                        </page>
                        <page string="Dependencies" col="1">
                            <field name="dependencies">
                                <tree string="Dependencies">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="module_view_tree">
            <field name="model">ir.module.module</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Modules"
                    colors="blue:state=='to upgrade' or state=='to install';grey:state=='uninstalled' or state=='uninstallable'">
                    <field name="name" select="1"/>
                    <field name="shortdesc" select="2"/>
                    <field name="author" select="2"/>
                    <field name="version"/>
                    <field name="website" select="2"/>
                    <field name="state" select="1"/>
                    <field name="description" tree_invisible="1" select="2"/>
                </tree>
              ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_module_form">
            <field name="name">Modules</field>
            <field name="type">ir.action.act_window</field>
            <field name="res_model">ir.module.module</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_module_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="module_view_tree"/>
            <field name="act_window" ref="act_module_form"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_module_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view" ref="module_view_form"/>
            <field name="act_window" ref="act_module_form"/>
        </record>
        <menuitem parent="menu_modules"
            action="act_module_form" id="menu_module_form"/>

        <record model="ir.action.act_window" id="act_module_form2">
            <field name="name">Modules</field>
            <field name="type">ir.action.act_window</field>
            <field name="res_model">ir.module.module</field>
            <field name="view_type">form</field>
            <field name="domain">[('category', 'child_of', [active_id])]</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_module_form2_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="module_view_tree"/>
            <field name="act_window" ref="act_module_form2"/>
        </record>
        <record model="ir.action.act_window.view"
            id="act_module_form2_view2">
            <field name="sequence" eval="2"/>
            <field name="view" ref="module_view_form"/>
            <field name="act_window" ref="act_module_form2"/>
        </record>
        <record model="ir.action.keyword" id="act_category_keyword1">
            <field name="action" ref="act_module_form2"/>
            <field name="keyword">tree_open</field>
            <field name="model">ir.module.category,0</field>
        </record>

        <record model="ir.ui.view" id="config_wizard_item_view_tree">
            <field name="model">ir.module.module.config_wizard.item</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Config Wizard Items" editable="bottom">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="state"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_config_wizard_item_form">
            <field name="name">Config Wizard Items</field>
            <field name="res_model">ir.module.module.config_wizard.item</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_config_wizard_item_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="config_wizard_item_view_tree"/>
            <field name="act_window" ref="act_config_wizard_item_form"/>
        </record>
        <menuitem parent="menu_modules"
            action="act_config_wizard_item_form"
            id="menu_config_wizard_item_form"/>
        <record model="ir.action.wizard" id="act_module_config_wizard">
            <field name="name">Module Configuration</field>
            <field name="wiz_name">ir.module.module.config_wizard</field>
        </record>
        <record model="ir.ui.view" id="module_config_wizard_first_view_form">
            <field name="model">ir.module.module.config_wizard.first</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Module Configuration Wizard" col="2">
                    <separator string="Welcome to the module configuration wizard!"
                        align="0.0" colspan="2"/>
                    <image name="gtk-info"/>
                    <group col="1">
                        <label string="You will be able to configure your installation"
                            align="0.0"/>
                        <label string="depending on the modules you have installed."
                            align="0.0"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="act_module_install_upgrade">
            <field name="name">Install / Upgrade Modules</field>
            <field name="wiz_name">ir.module.module.install_upgrade</field>
        </record>
        <record model="ir.action.keyword" id="act_module_install_upgrade_keyword1">
            <field name="action" ref="act_module_install_upgrade"/>
            <field name="keyword">form_action</field>
            <field name="model">ir.module.module,0</field>
        </record>

        <record model="ir.ui.view" id="module_install_upgrade_init_view_form">
            <field name="model">ir.module.module.install_upgrade.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="System Upgrade" col="2">
                    <image name="gtk-dialog-info"/>
                    <group col="4">
                        <label align="0.0"
                            string="Your system will be upgraded."
                            colspan="4"/>
                        <label align="0.0"
                            string="Note that this operation my take a few minutes."
                            colspan="4"/>
                        <separator name="module_info"/>
                        <field name="module_info" colspan="4"/>
                    </group>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="module_install_upgrade_start_view_form">
            <field name="model">ir.module.module.install_upgrade.start</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="System upgrade done" col="1">
                    <separator string="System upgrade done"/>
                    <label align="0.0"
                        string="The modules have been upgraded / installed !"/>
                    <label align="0.0"
                        string="You may have to reinstall some language pack."/>
                    <label align="0.0"
                        string="We suggest you to reload the menu tab (Ctrl+t Ctrl+r)."/>
                </form>
                ]]>
            </field>
        </record>

        <menuitem name="Install \ Upgrade Modules"
            parent="menu_modules"
            action="act_module_install_upgrade"
            type="wizard"
            id="menu_module_install_upgrade"/>

        <record model="ir.module.module.config_wizard.item"
            id="config_wizard_item_module">
            <field name="name">ir.module.module.config</field>
            <field name="sequence" eval="10000"/>
        </record>
    </data>
</tryton>
