<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="category_view_form">
            <field name="model">ir.module.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Module Category">
                    <label name="name"/>
                    <field name="name"/>
                    <label name="parent_id"/>
                    <field name="parent_id"/>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="category_view_tree">
            <field name="model">ir.module.category</field>
            <field name="type">tree</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Module Categories">
                    <field name="name"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_category_tree">
            <field name="name">Categories</field>
            <field name="type">ir.action.act_window</field>
            <field name="res_model">ir.module.category</field>
            <field name="view_type">tree</field>
            <field name="domain">[('parent_id', '=', False)]</field>
        </record>
        <record model="ir.action.act_window.view"
            id="act_category_tree_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="category_view_tree"/>
            <field name="act_window" ref="act_category_tree"/>
        </record>
        <menuitem parent_id="menu_modules"
            action="act_category_tree" id="menu_category_tree"/>
    </data>
</tryton>
