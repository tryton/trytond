<?xml version="1.0"?>
<terp>
    <data>
        <record model="res.groups" id="group_admin">
            <field name="name">admin</field>
        </record>
        <record model="res.users" id="user_admin">
            <field name="login">admin</field>
            <field name="password">admin</field>
            <field name="name">Administrator</field>
            <field name="signature">Administrator</field>
            <field name="action_id" ref="ir.act_menu_tree"/>
            <field name="menu_id" ref="ir.act_menu_tree"/>
            <field name="groups_id" eval="[(6, 0, [group_admin])]"/>
        </record>
        <record model="ir.ui.view" id="users_view_form">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Users">
                    <notebook>
                        <page string="User">
                            <field name="name" select="1"/>
                            <field name="active" select="1"/>
                            <field name="login" select="1"/>
                            <field name="password"/>
                            <!--field name="address_id"/-->
                            <!--field name="company_id" required="1"/-->
                            <field name="action_id" required="True"/>
                            <field name="menu_id"
                                domain="[('usage','=','menu')]"
                                required="True"/>
                            <field name="signature" colspan="4"/>
                        </page>
                        <page string="Security">
                            <field name="groups_id" colspan="4"/>
                            <field name="roles_id" colspan="4"/>
                            <field name="rule_groups" colspan="4"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="users_view_tree">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_users_form">
            <field name="name">Users</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_users_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="users_view_tree"/>
            <field name="act_window_id" ref="act_users_form"/>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_users_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="users_view_form"/>
            <field name="act_window_id" ref="act_users_form"/>
        </record>
        <menuitem name="Administration/Res/"
            action="act_users_form" id="menu_users_form"/>
    </data>
</terp>
