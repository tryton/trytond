<?xml version="1.0"?>
<terp>
    <data>
        <record model="res.group" id="group_admin">
            <field name="name">admin</field>
        </record>
        <record model="res.user" id="user_admin">
            <field name="login">admin</field>
            <field name="password">admin</field>
            <field name="name">Administrator</field>
            <field name="signature">Administrator</field>
            <field name="action_id" ref="ir.act_menu_tree"/>
            <field name="menu_id" ref="ir.act_menu_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_admin')])]"/>
        </record>
        <record model="ir.ui.view" id="user_view_form">
            <field name="model">res.user</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="User">
                    <notebook>
                        <page string="User">
                            <field name="name" select="1"/>
                            <field name="active" select="1"/>
                            <field name="login" select="1"/>
                            <field name="password"/>
                            <!--field name="address_id"/-->
                            <!--field name="company_id" required="1"/-->
                            <field name="action_id" required="True"/>
                            <field name="menu_id"
                                domain="[('usage','=','menu')]"
                                required="True"/>
                            <field name="signature" colspan="4"/>
                        </page>
                        <page string="Security">
                            <field name="groups_id" colspan="4"/>
                            <field name="roles_id" colspan="4"/>
                            <field name="rule_groups" colspan="4"/>
                        </page>
                    </notebook>
                </form>
              ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="user_view_tree">
            <field name="model">res.user</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                </tree>
              ]]>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_user_form">
            <field name="name">Users</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.user</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_user_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="user_view_tree"/>
            <field name="act_window_id" ref="act_user_form"/>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_user_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="user_view_form"/>
            <field name="act_window_id" ref="act_user_form"/>
        </record>
        <menuitem parent_id="res.menu_res"
            action="act_user_form" id="menu_user_form"/>
        <record model="ir.ui.view" id="group_view_form">
            <field name="model">res.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Group">
                    <notebook>
                        <page string="Group">
                            <field name="name" select="1"/>
                            <field name="users" colspan="4"/>
                        </page>
                        <page string="Security">
                            <field name="model_access" colspan="4"/>
                            <field name="menu_access" colspan="4"/>
                            <field name="rule_groups" colspan="4"/>
                        </page>
                    </notebook>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="group_view_tree">
            <field name="model">res.group</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Groups">
                    <field name="name"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_group_form">
            <field name="name">Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.group</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_group_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="group_view_tree"/>
            <field name="act_window_id" ref="act_group_form"/>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_group_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="group_view_form"/>
            <field name="act_window_id" ref="act_group_form"/>
        </record>
        <menuitem parent_id="res.menu_res"
            action="act_group_form" id="menu_group_form"/>
        <record model="ir.ui.view" id="role_view_form">
            <field name="model">res.role</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <![CDATA[
                <form string="Role">
                    <field name="name" select="1"/>
                    <field name="parent_id"/>
                </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="role_view_tree">
            <field name="model">res.role</field>
            <field name="type">tree</field>
            <field name="field_parent">parent_id</field>
            <field name="arch" type="xml">
              <![CDATA[
                <tree string="Roles">
                    <field name="name"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_role_form">
            <field name="name">Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.role</field>
            <field name="view_type">form</field>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_role_form_view1">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="role_view_tree"/>
            <field name="act_window_id" ref="act_role_form"/>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_role_form_view2">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="role_view_form"/>
            <field name="act_window_id" ref="act_role_form"/>
        </record>
        <record model="ir.actions.act_window" id="act_role_tree">
            <field name="name">Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.role</field>
            <field name="view_type">tree</field>
        </record>
        <record model="ir.actions.act_window.view"
            id="act_role_form_view3">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="role_view_tree"/>
            <field name="act_window_id" ref="act_role_tree"/>
        </record>
        <menuitem parent_id="res.menu_res"
            action="act_role_form" id="menu_role_form"/>
        <menuitem parent_id="res.menu_res"
            action="act_role_tree" id="menu_role_tree"/>
    </data>
</terp>
